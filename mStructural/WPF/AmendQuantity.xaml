<Window x:Class="mStructural.WPF.AppendQuantity"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:mStructural.WPF"
             mc:Ignorable="d" Height="151" Width="375">
    <Grid>
        <TextBlock TextAlignment="Center" HorizontalAlignment="Center" Margin="0,21,0,0" TextWrapping="Wrap" Text="Do you want to change the label quantity to balloon quantity?" VerticalAlignment="Top" Height="35" Width="187"/>
        <CheckBox x:Name="AppendQtyCh" Content="Yes" HorizontalAlignment="Center" VerticalAlignment="Top" IsChecked="True" Margin="0,68,0,0"/>
        <Button x:Name="OkBtn" Content="OK" Margin="0,0,19,10" Height="20" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="40" Background="White" Click="OkBtn_Click"/>

    </Grid>
</Window>
