<Window x:Class="mStructural.WPF.LinkBomWPF"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:mStructural.WPF"
             mc:Ignorable="d" 
             Height="150" Width="450" Title="Link BOM" Topmost="True" ResizeMode="NoResize">
    <Grid>
        <StackPanel>
            <StackPanel Margin=" 10"></StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock Margin="20,5">BOM/Cutlist</TextBlock>
                <ComboBox x:Name="bomCb" Width=" 150"></ComboBox>
            </StackPanel>
        </StackPanel>
        <Button x:Name="LinkBtn" Click="LinkBtn_Click" Margin="0,0,25,25" Height="25" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="100">Link</Button>
    </Grid>
</Window>
